  author = {Malbrain, Manu L. N. G. and Langer, Thomas and Annane, Djillali and Gattinoni, Luciano and Elbers, Paul and Hahn, Robert G. and {De laet}, Inneke and Minini, Andrea and Wong, Adrian and Ince, Can and Muckart, David and Mythen, Monty and Caironi, Pietro and Van Regenmortel, Niels},
