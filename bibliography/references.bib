  pmid = {19602972},
  keywords = {Arterial waveform,Critical care,Fluid responsiveness,Fluid therapy,Heart-lung interactions,Hemodynamic monitoring,Meta-analysis,Preload,Pulse contour analysis,Pulse pressure variation,Stroke volume,Stroke volume variation,Systematic review},
