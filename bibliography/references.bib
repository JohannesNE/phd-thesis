@article{wyffelsNewAlgorithmQuantify2021,
  ids = {wyffelsNewAlgorithmQuantify2020},
  title = {New Algorithm to Quantify Cardiopulmonary Interaction in Patients with Atrial Fibrillation: A Proof-of-Concept Study},
