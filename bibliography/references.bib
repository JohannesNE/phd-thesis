  author = {Michard, Fr{\'e}d{\'e}ric and Boussat, Sandrine and Chemla, Denis and Anguel, Nadia and Mercat, Alain and Lecarpentier, Yves and Richard, Christian and Pinsky, Michael R. and Teboul, Jean-Louis},
