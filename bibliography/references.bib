@article{messinaFunctionalHemodynamicTests2019,
  ids = {messinaFunctionalHemodynamicTests2019a},
  title = {Functional Hemodynamic Tests: A Systematic Review and a Metanalysis on the Reliability of the End-Expiratory Occlusion Test and of the Mini-Fluid Challenge in Predicting Fluid Responsiveness},
  shorttitle = {Functional Hemodynamic Tests},
  author = {Messina, Antonio and Dell'Anna, Antonio and Baggiani, Marta and Torrini, Flavia and Maresca, Gian Marco and Bennett, Victoria and Saderi, Laura and Sotgiu, Giovanni and Antonelli, Massimo and Cecconi, Maurizio},
  year = {2019},
