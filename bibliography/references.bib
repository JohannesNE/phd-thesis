  keywords = {cardiac output,trends,validation studies},
  file = {/home/johannes/Zotero/storage/XKSWTF8K/Montenij et al. - 2016 - Methodology of method comparison studies evaluatin.pdf;/home/johannes/Zotero/storage/VDR5RA9G/S0007091217302416.html}
}

