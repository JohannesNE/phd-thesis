@article{chappellHypervolemiaIncreasesRelease2014,
  title = {Hypervolemia Increases Release of Atrial Natriuretic Peptide and Shedding of the Endothelial Glycocalyx},
  author = {Chappell, Daniel and Bruegger, Dirk and Potzel, Julia and Jacob, Matthias and Brettner, Florian and Vogeser, Michael and Conzen, Peter and Becker, Bernhard F. and Rehm, Markus},
