  keywords = {Aged,algorithm,Algorithms,atrial fibrillation,Atrial Fibrillation,Blood Pressure,cardiopulmonary interaction,dynamic filling parameter,Electrocardiography,Female,haemodynamic,Heart,Humans,Lung,Male,mechanical ventilation,Middle Aged,pulse pressure variation,Respiration; Artificial},
